<Window x:Class="NetVox.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NetVox Radio" Height="500" Width="800">
    <DockPanel>
        <TabControl Margin="10" TabStripPlacement="Left" DockPanel.Dock="Top">
            <!-- Profile Tab -->
            <TabItem Header="Profile">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Profile Buttons -->
                    <Button x:Name="BtnLoad"
          Grid.Row="0" Grid.Column="0"
          Content="Load Profile"
          Margin="0,0,10,0"/>
                    <Button x:Name="BtnSave"
          Grid.Row="0" Grid.Column="1"
          Content="Save Profile"/>
                </Grid>

            </TabItem>

            <!-- Network Tab -->
            <TabItem Header="Network">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Local IP Selector -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                     VerticalAlignment="Center"
                     Text="Local IP:"/>
                    <ComboBox x:Name="ComboLocalIP"
                    Grid.Row="0" Grid.Column="1"
                    Margin="5"/>

                    <!-- Destination IP Entry -->
                    <TextBlock Grid.Row="1" Grid.Column="0"
                     VerticalAlignment="Center"
                     Text="Destination IP:"/>
                    <TextBox x:Name="TxtDestinationIP"
                   Grid.Row="1" Grid.Column="1"
                   Margin="5"/>

                    <!-- Apply Button -->
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                      Orientation="Horizontal" HorizontalAlignment="Right"
                      Margin="0,10,0,0">
                        <Button x:Name="BtnNetworkApply" Content="Apply" Width="75"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- DIS Tab -->
            <TabItem Header="DIS">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- DIS Version Selector -->
                    <TextBlock Grid.Row="0" Grid.Column="0"
                     VerticalAlignment="Center"
                     Text="DIS Version:"/>
                    <ComboBox x:Name="ComboVersion"
                    Grid.Row="0" Grid.Column="1"
                    Margin="5"/>

                    <!-- Apply Button -->
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                      Orientation="Horizontal" HorizontalAlignment="Right"
                      Margin="0,10,0,0">
                        <Button x:Name="BtnDisApply" Content="Apply" Width="75"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Status Line -->
        <TextBlock x:Name="TxtStatus"
               DockPanel.Dock="Bottom"
               Margin="10"
               Text="Ready"/>
    </DockPanel>
</Window>
