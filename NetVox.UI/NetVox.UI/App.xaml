<Application x:Class="NetVox.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <!-- ================== NAVY + AMBER THEME ================== -->
        <ResourceDictionary>
            <!-- Core colors -->
            <Color x:Key="Navy900Color">#0B1E3A</Color>
            <Color x:Key="Navy800Color">#102A49</Color>
            <Color x:Key="Navy700Color">#12355B</Color>
            <Color x:Key="Navy600Color">#1A4371</Color>
            <Color x:Key="Navy500Color">#1F4E79</Color>

            <Color x:Key="Amber300Color">#FFD54F</Color>
            <Color x:Key="Amber500Color">#FFC107</Color>
            <Color x:Key="Amber600Color">#FFB300</Color>
            <Color x:Key="Amber700Color">#FFA000</Color>

            <Color x:Key="SurfaceColor">#0F1724</Color>
            <Color x:Key="SurfaceAltColor">#0B1320</Color>
            <Color x:Key="BorderColor">#1E3153</Color>

            <Color x:Key="TextPrimaryColor">#EAF2FF</Color>
            <Color x:Key="TextSecondaryColor">#BFD1EA</Color>
            <Color x:Key="TextOnAmberColor">#08131F</Color>

            <!-- Brushes -->
            <SolidColorBrush x:Key="Navy900" Color="{StaticResource Navy900Color}"/>
            <SolidColorBrush x:Key="Navy800" Color="{StaticResource Navy800Color}"/>
            <SolidColorBrush x:Key="Navy700" Color="{StaticResource Navy700Color}"/>
            <SolidColorBrush x:Key="Navy600" Color="{StaticResource Navy600Color}"/>
            <SolidColorBrush x:Key="Navy500" Color="{StaticResource Navy500Color}"/>

            <SolidColorBrush x:Key="Amber300" Color="{StaticResource Amber300Color}"/>
            <SolidColorBrush x:Key="Amber500" Color="{StaticResource Amber500Color}"/>
            <SolidColorBrush x:Key="Amber600" Color="{StaticResource Amber600Color}"/>
            <SolidColorBrush x:Key="Amber700" Color="{StaticResource Amber700Color}"/>

            <SolidColorBrush x:Key="Surface" Color="{StaticResource SurfaceColor}"/>
            <SolidColorBrush x:Key="SurfaceAlt" Color="{StaticResource SurfaceAltColor}"/>
            <SolidColorBrush x:Key="BorderBrushColor" Color="{StaticResource BorderColor}"/>

            <SolidColorBrush x:Key="TextPrimary" Color="{StaticResource TextPrimaryColor}"/>
            <SolidColorBrush x:Key="TextSecondary" Color="{StaticResource TextSecondaryColor}"/>
            <SolidColorBrush x:Key="TextOnAmber" Color="{StaticResource TextOnAmberColor}"/>

            <!-- Focus outline -->
            <SolidColorBrush x:Key="FocusOutline" Color="{StaticResource Amber300Color}"/>

            <!-- =============== Button Styles (hover included) =============== -->

            <!-- Base template used by both primary/secondary -->
            <Style x:Key="BaseButtonStyle" TargetType="Button">
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="Background" Value="{StaticResource Navy700}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bg"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  TextElement.FontSize="{TemplateBinding FontSize}"
                                                  TextElement.FontWeight="{TemplateBinding FontWeight}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bg" Property="BorderBrush" Value="{StaticResource Amber600}"/>
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="Bg" Property="BorderBrush" Value="{StaticResource Amber600}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Primary (Amber background) -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="Background" Value="{StaticResource Amber500}"/>
                <Setter Property="Foreground" Value="{StaticResource TextOnAmber}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Amber600}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource Amber600}"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="{StaticResource Amber700}"/>
                    </Trigger>
                    <Trigger Property="IsKeyboardFocused" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource Amber300}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Secondary (Navy background with Amber hover) -->
            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource BaseButtonStyle}">
                <Setter Property="Background" Value="{StaticResource Navy700}"/>
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderBrushColor}"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource Navy600}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource Amber600}"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="{StaticResource Navy800}"/>
                        <Setter Property="BorderBrush" Value="{StaticResource Amber700}"/>
                    </Trigger>
                    <Trigger Property="IsKeyboardFocused" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource Amber300}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Expander Header brush to match theme -->
            <Style TargetType="Expander">
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="Background" Value="{StaticResource SurfaceAlt}"/>
            </Style>

            <!-- Text styles (optional helpers) -->
            <Style x:Key="HeadingText" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                <Setter Property="FontSize" Value="22"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>
            <Style x:Key="SubtleText" TargetType="TextBlock">
                <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
