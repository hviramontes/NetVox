<UserControl x:Class="NetVox.UI.Views.KeyboardSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetVox.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="Keyboard Settings" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" />

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Push-to-Talk Key:" VerticalAlignment="Center" Width="150"/>
                <local:KeyCaptureTextBox x:Name="TxtPttKey" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Mute Toggle Key:" VerticalAlignment="Center" Width="150"/>
                <local:KeyCaptureTextBox x:Name="TxtMuteKey" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Channel Up Key:" VerticalAlignment="Center" Width="150"/>
                <local:KeyCaptureTextBox x:Name="TxtChannelUpKey" Width="200" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Channel Down Key:" VerticalAlignment="Center" Width="150"/>
                <local:KeyCaptureTextBox x:Name="TxtChannelDownKey" Width="200" />
            </StackPanel>

            <Button Name="BtnSaveKeys" Content="Save Keys" Width="100" HorizontalAlignment="Left" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
