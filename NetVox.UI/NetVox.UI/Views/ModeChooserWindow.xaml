<Window x:Class="NetVox.UI.Views.ModeChooserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Mode"
        Height="560" Width="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource Navy900}"
        Foreground="{StaticResource TextPrimary}"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded">

    <Grid>
        <!-- Card -->
        <Border CornerRadius="12"
                Background="{StaticResource Surface}"
                BorderBrush="{StaticResource BorderBrushColor}"
                BorderThickness="1"
                Padding="0"
                Margin="20"/>

        <Grid Margin="36">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="18"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0"
                       Text="Choose Mode"
                       Style="{StaticResource HeadingText}"/>

            <!-- Subtitle -->
            <TextBlock Grid.Row="2"
                       Text="Pick how you’d like to use NetVox today."
                       Style="{StaticResource SubtleText}"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="4" Orientation="Vertical">
                <!-- Easy Mode -->
                <Button x:Name="BtnEasyMode"
                        Content="Easy Mode"
                        Height="52"
                        Margin="0,0,0,12"
                        Style="{StaticResource PrimaryButtonStyle}"
                        MouseEnter="BtnEasyMode_MouseEnter"
                        MouseLeave="ModeButtons_MouseLeave"
                        Click="EasyMode_Click"/>
                <!-- Advanced Mode -->
                <Button x:Name="BtnAdvancedMode"
                        Content="Advanced Mode"
                        Height="52"
                        Style="{StaticResource SecondaryButtonStyle}"
                        MouseEnter="BtnAdvancedMode_MouseEnter"
                        MouseLeave="ModeButtons_MouseLeave"
                        Click="AdvancedMode_Click"/>
            </StackPanel>

            <!-- Audio Config -->
            <Expander x:Name="ExpQuickConfig"
                      Grid.Row="6"
                      Header="Audio Config (optional)"
                      Background="{StaticResource SurfaceAlt}"
                      Foreground="{StaticResource TextPrimary}">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Output device:" Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="ComboOutput"
                              Grid.Row="0" Grid.Column="1"
                              MinHeight="30"/>

                    <TextBlock Text="Input device:" Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <ComboBox x:Name="ComboInput"
                              Grid.Row="2" Grid.Column="1"
                              MinHeight="30"/>
                </Grid>
            </Expander>

            <!-- Guidance text (persistent; updates on hover) -->
            <ScrollViewer Grid.Row="8" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="TxtGuidance"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource TextSecondary}">
                    <Run Text="What is Easy Mode? "/>
                    <Run Foreground="{StaticResource Amber500}" Text="Great for quick voice comms."/><LineBreak/><LineBreak/>
                    <Run Text="• No setup required — it auto-detects your network and uses safe defaults."/><LineBreak/>
                    <Run Text="• Audio is 16-bit PCM @ 44.1 kHz for best clarity."/><LineBreak/>
                    <Run Text="• Broadcasts on your local network (.255) so teammates hear you right away."/><LineBreak/><LineBreak/>
                    <Run Text="Prefer full control? Hover ‘Advanced Mode’ to see what it unlocks."/>
                </TextBlock>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
