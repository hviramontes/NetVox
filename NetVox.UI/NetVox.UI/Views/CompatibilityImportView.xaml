<UserControl x:Class="NetVox.UI.Views.CompatibilityImportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- content -->
            <RowDefinition Height="Auto"/>
            <!-- bottom bar -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- main -->
            <ColumnDefinition Width="280"/>
            <!-- tips -->
        </Grid.ColumnDefinitions>

        <!-- LEFT: Import + Preview (preview only scrolls) -->
        <Grid Grid.Row="0" Grid.Column="0" Margin="0,0,12,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- import group -->
                <RowDefinition Height="*"/>
                <!-- preview group -->
            </Grid.RowDefinitions>

            <!-- Import File -->
            <GroupBox Header="Compatibility / Import" Grid.Row="0" Margin="0,0,0,12">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- browse row -->
                        <RowDefinition Height="Auto"/>
                        <!-- hint row -->
                        <RowDefinition Height="Auto"/>
                        <!-- drop zone -->
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Import File:"/>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="BtnBrowse" Content="Browse…" Width="100" Margin="0,0,8,0"
                                ToolTip="Pick a CNR-Sim or ASTi Voisus configuration file"/>
                        <TextBlock x:Name="TxtFilePath" VerticalAlignment="Center" Foreground="#555" Text="No file selected"/>
                    </StackPanel>

                    <!-- Moved: directly under the 'Import File:' label, spanning both columns -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                               Margin="0,8,0,0" Foreground="#666" FontSize="12" TextWrapping="Wrap">
                        Common location: %USERPROFILE%\Documents\CNR-SIM
                    </TextBlock>

                    <!-- Drag/drop zone -->
                    <Border x:Name="DropZone"
                            Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                            Margin="0,10,0,0"
                            Padding="12"
                            Background="#FAFAFA"
                            BorderBrush="#DDD" BorderThickness="1"
                            AllowDrop="True">
                        <StackPanel>
                            <TextBlock FontWeight="Bold" Text="Drag a CNR-Sim or ASTi Voisus config here"/>
                            <TextBlock Foreground="#666" FontSize="12" Text="XML, JSON and INI-like files supported (more adapters later)"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </GroupBox>

            <!-- Preview (only this area scrolls) -->
            <GroupBox Header="Preview of mapped settings" Grid.Row="1">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- caption -->
                        <RowDefinition Height="*"/>
                        <!-- scrollable content -->
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Margin="0,0,0,6" Foreground="#666"
                               Text="These fields were detected in the file and will be applied to NetVox settings."/>

                    <!-- DataGrid has its own ScrollViewer; we just let this region take the remaining height -->
                    <DataGrid x:Name="GridPreview"
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              HeadersVisibility="Column"
                              GridLinesVisibility="Horizontal"
                              RowHeaderWidth="0"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Auto">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Source Field" Binding="{Binding SourceKey}" Width="2*"/>
                            <DataGridTextColumn Header="Value"        Binding="{Binding SourceValue}" Width="2*"/>
                            <DataGridTextColumn Header="NetVox Target" Binding="{Binding TargetLabel}" Width="2*"/>
                            <DataGridTextColumn Header="Category"     Binding="{Binding Category}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </GroupBox>
        </Grid>

        <!-- RIGHT: tips -->
        <Border Grid.Row="0" Grid.Column="1" Padding="10" Background="#F8F8F8" BorderBrush="#DDD" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="TxtCompatTips"
                           TextWrapping="Wrap"
                           FontSize="13"
                           Foreground="#333"
                           Text="Import tips:
• Click Browse or drag a file into the box.
• We’ll auto-detect CNR-Sim vs ASTi Voisus by content.
• Select a preview row to see its details here.
• Nothing is committed until you press Apply."/>
            </ScrollViewer>
        </Border>

        <!-- Bottom Apply bar -->
        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button x:Name="BtnApply" Content="Apply" Width="100" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</UserControl>
