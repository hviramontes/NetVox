<UserControl x:Class="NetVox.UI.Views.ChannelManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:NetVox.Core.Models;assembly=NetVox.Core"
             xmlns:local="clr-namespace:NetVox.UI.Views"
             Height="Auto" Width="Auto">

    <!-- Converters to show/edit MHz and kHz -->
    <UserControl.Resources>
        <local:HzToMHzConverter x:Key="HzToMHz"/>
        <local:HzToKHzConverter x:Key="HzToKHz"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DataGrid x:Name="GridChannels"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  IsReadOnly="False"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  Margin="0,10,0,10"
                  Background="White"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All">

            <DataGrid.Columns>
                <!-- 1) Channel # -->
                <DataGridTextColumn Header="Channel #"
                                    Binding="{Binding ChannelNumber}"
                                    IsReadOnly="True"
                                    Width="*" />

                <!-- 2) Name -->
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    Width="*" />

                <!-- 3) Frequency (MHz) -->
                <DataGridTextColumn Header="Frequency (MHz)"
                                    Width="*"
                                    Binding="{Binding FrequencyHz, Mode=TwoWay, Converter={StaticResource HzToMHz}}"/>

                <!-- 4) Bandwidth (kHz) -->
                <DataGridTextColumn Header="Bandwidth (kHz)"
                                    Width="*"
                                    Binding="{Binding BandwidthHz, Mode=TwoWay, Converter={StaticResource HzToKHz}}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Button Panel -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="➕ Add" Name="BtnAddChannel" Width="80" Margin="5" />
            <Button Content="🗑 Delete" Name="BtnDeleteChannel" Width="80" Margin="5" />
            <Button Content="💾 Save Channels" Name="BtnSave" Width="120" Margin="5" />
        </StackPanel>
    </Grid>
</UserControl>
