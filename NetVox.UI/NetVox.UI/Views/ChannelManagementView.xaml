<UserControl x:Class="NetVox.UI.Views.ChannelManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:NetVox.Core.Models;assembly=NetVox.Core"
             MinHeight="400" MinWidth="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Channel Table -->
        <DataGrid x:Name="GridChannels"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  Margin="0 0 0 10"
                  SelectionMode="Single"
                  ItemsSource="{Binding}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" Binding="{Binding ChannelNumber}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Frequency (MHz)" Binding="{Binding FrequencyMHz}" Width="150"/>
                <DataGridTextColumn Header="Bandwidth (kHz)" Binding="{Binding BandwidthKHz}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Add/Delete Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button x:Name="BtnAddChannel" Content="Add" Width="80" Margin="0 0 10 0"/>
            <Button x:Name="BtnDeleteChannel" Content="Delete" Width="80"/>
            <Button x:Name="BtnSaveChannels" Content="Save" Width="80" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
